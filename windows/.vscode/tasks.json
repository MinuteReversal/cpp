{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  //https://code.visualstudio.com/docs/cpp/config-mingw
  "version": "2.0.0",
  "windows": {
    "options": {
      "shell": {
        "executable": "cmd.exe",
        "args": [
          "/C",
          // The path to VsDevCmd.bat depends on the version of Visual Studio you have installed.
          "\"C:\\Program Files\\Microsoft Visual Studio\\2022\\Community\\VC\\Auxiliary\\Build\\vcvars64.bat\"",
          "&&"
        ]
      }
    }
  },
  "tasks": [
    {
      "label": "g++ build active file",
      "type": "shell",
      "command": "g++",
      "args": [
        "-g",
        "-fexec-charset=GBK", // 处理mingw中文编码问题
        "-finput-charset=UTF-8", // 处理mingw中文编码问题
        "-mwindows",
        "-W",
        "${file}",
        "-lgdiplus",
        "-lopengl32",
        "-lglu32",
        "-ldwmapi",
        "-o",
        "${fileDirname}\\${fileBasenameNoExtension}.exe"
      ],
      "options": {
        "cwd": "C:\\Program Files\\mingw-w64\\x86_64-8.1.0-posix-seh-rt_v6-rev0\\mingw64\\bin"
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "type": "shell",
      "label": "C/C++: cl.exe build active file",
      "command": "cl.exe",
      "args": [
        "/Zi",
        "/EHsc",
        "/Fe:",
        "${fileDirname}\\${fileBasenameNoExtension}.exe",
        "/I",
        "${fileDirname}",
        "${fileDirname}\\*.cpp",
        "/std:c++17"
      ],
      "problemMatcher": ["$msCompile"],
      "group": {
        "kind": "build"
      },
      "detail": "Task generated by Debugger."
    },
    {
      "type": "shell",
      "label": "C/C++: cl.exe build active file",
      "command": "cl.exe",
      "args": [
        "/Zi",
        "/EHsc",
        "/Fe:",
        "${fileDirname}\\${fileBasenameNoExtension}.exe",
        "/I",
        "${fileDirname}",
        "${fileDirname}\\*.cpp",
        "/std:c++17"
      ],
      "problemMatcher": ["$msCompile"],
      "group": {
        "kind": "build"
      },
      "detail": "Task generated by Debugger."
    },
    {
      "type": "shell",
      "label": "C/C++: cl.exe build active file ffmpeg",
      "command": "cl.exe",
      "args": [
        "/Zi",
        "/EHsc",
        "/Fe:",
        "${fileDirname}\\${fileBasenameNoExtension}.exe",
        "/I",
        "${env:FFMPEG_HOME}\\include",
        "${fileDirname}\\*.cpp",
        "${env:FFMPEG_HOME}\\lib\\avcodec.lib",
        "${env:FFMPEG_HOME}\\lib\\avformat.lib",
        "${env:FFMPEG_HOME}\\lib\\avutil.lib",
        "${env:FFMPEG_HOME}\\lib\\swscale.lib"
      ],
      "problemMatcher": ["$msCompile"],
      "group": {
        "kind": "build"
      },
      "detail": "Task generated by Debugger."
    },
    {
      "type": "shell",
      "label": "C/C++: cl.exe build active file sdl2",
      "command": "cl.exe",
      "args": [
        "/Zi",
        "/EHsc",       
        "/Fe:",
        "${fileDirname}\\${fileBasenameNoExtension}.exe",
        "${file}",
        "shell32.lib",
        "SDL2.lib",
        "SDL2main.lib",
        "/I",
        "${env:SDL2}\\include",
        "/link",
        "/LIBPATH:${env:SDL2}\\lib\\x64",
        "/SUBSYSTEM:CONSOLE"
      ],
      "problemMatcher": ["$msCompile"],
      "group": {
        "kind": "build"
      },
      "detail": "Task generated by Debugger."
    },
    {
      "type": "shell",
      "label": "C/C++: cl.exe build active file ffmpeg with resource",
      "command": "cl.exe",
      "args": [
        "/Zi",
        "/EHsc",
        "/Fe:",
        "${fileDirname}\\${fileBasenameNoExtension}.exe",
        "/I",
        "${env:FFMPEG_HOME}\\include",
        "${fileDirname}\\*.cpp",
        "${env:FFMPEG_HOME}\\lib\\avcodec.lib",
        "${env:FFMPEG_HOME}\\lib\\avformat.lib",
        "${env:FFMPEG_HOME}\\lib\\avutil.lib",
        "${env:FFMPEG_HOME}\\lib\\swscale.lib",
        "${fileDirname}\\*.res"
      ],
      "dependsOn": ["rc build res file"],
      "problemMatcher": ["$msCompile"],
      "group": {
        "kind": "build"
      },
      "detail": "Task generated by Debugger."
    },
    {
      "type": "shell",
      "label": "C/C++: cl.exe build active file with resource file",
      "command": "cl.exe",
      "args": [
        "/Zi",
        "/EHsc",
        "/Fe:",
        "${fileDirname}\\${fileBasenameNoExtension}.exe",
        "/I",
        "${fileDirname}",
        "${fileDirname}\\*.cpp",
        "${fileDirname}\\*.res",
        "/std:c++17"
      ],
      "problemMatcher": ["$msCompile"],
      "group": {
        "kind": "build"
      },
      "dependsOn": ["rc build res file"],
      "detail": "Task generated by Debugger."
    },
    {
      "type": "shell",
      "label": "rc build res file",
      "command": "rc.exe",
      "args": ["${fileDirname}\\resource.rc"],
      "problemMatcher": ["$msCompile"],
      "group": {
        "kind": "build"
      },
      "detail": "Task generated by Debugger."
    },
    {
      "type": "shell",
      "label": "C/C++: cl.exe build active single file",
      "command": "cl.exe",
      "args": [
        "/Zi",
        "/EHsc",
        "/utf-8",
        "/MT",
        "/std:c++17",
        "/Fe:",
        "${fileDirname}\\${fileBasenameNoExtension}.exe",
        "/I",
        "${fileDirname}",
        "${file}"
      ],
      "problemMatcher": ["$msCompile"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Task generated by Debugger."
    },
    {
      "type": "shell",
      "label": "C/C++: cl.exe build active single file to dll",
      "command": "cl.exe",
      "args": [
        "/EHsc",
        "/utf-8",
        "/LD",
        "${file}",
        "/link",
        "/DLL",
        "/OUT:${fileDirname}\\${fileBasenameNoExtension}.dll"
      ],
      "problemMatcher": ["$msCompile"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Task generated by Debugger."
    }
  ]
}
